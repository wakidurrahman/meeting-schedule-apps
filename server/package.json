{
  "name": "meeting-scheduler-graphql-api-server",
  "version": "0.1.1",
  "private": true,
  "description": "This file boots an Express server that exposes a single GraphQL endpoint at `/graphql`. It wires security (Helmet), logging (Morgan), CORS, JSON body parsing, request id correlation,authentication middleware, schema creation, and a health check endpoint",
  "main": "server.js",
  "type": "commonjs",
  "license": "MIT",
  "engines": {
    "node": ">=22.14.0 <23.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node --max-old-space-size=512 server.js",
    "dev": "nodemon server.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "check": "npm run lint && npm run format:check",
    "prod:install": "npm ci --only=production",
    "docker:start": "NODE_ENV=production node --enable-source-maps server.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-graphql": "^0.12.0",
    "express-rate-limit": "^7.5.1",
    "graphql": "^15.9.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "sharp": "^0.34.3",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "apollo-server-testing": "^2.25.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^30.0.5",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      "**/*.test.js"
    ],
    "ext": "js,json",
    "watch": [
      "server.js",
      "graphql",
      "models",
      "middleware",
      "utils"
    ]
  }
}
