{
  // Format on save for the whole workspace
  "editor.formatOnSave": true,
  // Use Prettier as the default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Enable ESLint to fix problems on save
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    { "mode": "auto" },
    { "directory": "client", "changeProcessCWD": true },
    { "directory": "server", "changeProcessCWD": true }
  ],
  // Search both projects for tsconfig paths
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.tsdk": "client/node_modules/typescript/lib",

  // Debugging settings
  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": "on",
  "debug.showInlineBreakpointCandidates": true,
  "debug.terminal.clearBeforeReusing": true,
  "debug.javascript.autoAttachFilter": "smart",
  "debug.javascript.suggestPrettyPrinting": true,

  // Terminal settings for debugging
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.splitCwd": "workspaceRoot",

  // Files to exclude from search during debugging
  "search.exclude": {
    "**/node_modules": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true
  }
}
