{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 Launch Client (React/Vite)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/client/src",
      "sourceMaps": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-userdatadir",
      "runtimeArgs": [
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor",
        "--remote-debugging-port=9222"
      ],
      "preLaunchTask": "npm: dev - client",
      "timeout": 30000,
      "cleanUp": "wholeBrowser"
    },
    {
      "name": "🚀 Launch Client (Simple Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/client/src",
      "sourceMaps": true,
      "userDataDir": true,
      "preLaunchTask": "npm: dev - client",
      "timeout": 30000
    },
    {
      "name": "🌐 Attach to Chrome (Client)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/client/src",
      "sourceMaps": true
    },
    {
      "name": "🖥️ Launch Client (Vite Server Only)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/client",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Local:   (https?://[^\\s]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "🔧 Debug Server (Node.js/Express)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/server.js",
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "restart": true,
      "runtimeArgs": ["--inspect"],
      "outputCapture": "std"
    },
    {
      "name": "🔧 Debug Server with Nodemon",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "🧪 Debug Server Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "🔗 Attach to Server Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}/server",
      "remoteRoot": "${workspaceFolder}/server"
    }
  ],
  "compounds": [
    {
      "name": "🚀 Launch Full Stack (Client + Server)",
      "configurations": [
        "🔧 Debug Server with Nodemon",
        "🖥️ Launch Client (Vite Server Only)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    },
    {
      "name": "🚀 Debug Full Stack (Browser + Server)",
      "configurations": [
        "🔧 Debug Server with Nodemon",
        "🚀 Launch Client (React/Vite)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 2
      }
    },
    {
      "name": "🚀 Debug Full Stack (Simple Chrome + Server)",
      "configurations": [
        "🔧 Debug Server with Nodemon",
        "🚀 Launch Client (Simple Chrome)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 3
      }
    }
  ]
}
